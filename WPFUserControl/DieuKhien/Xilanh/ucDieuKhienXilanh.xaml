             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUserControl.DieuKhien.Xilanh"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Viewbox Margin="0,0,0,0" >
        <DockPanel  Background="DarkGray">
            <TextBlock DockPanel.Dock="Top" Text="XILANH" FontSize="30" Background="Black" Foreground="DarkGoldenrod" TextAlignment="Center" VerticalAlignment="Center" Margin="2"/>
            <Button DockPanel.Dock="Top" Content="CHẠY TIẾN" Margin="5"></Button>
            <Button DockPanel.Dock="Bottom" Content="DỪNG LÙI" Margin="5"></Button>
        </DockPanel>
    </Viewbox>
</UserControl>
